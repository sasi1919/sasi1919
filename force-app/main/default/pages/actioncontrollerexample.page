<apex:page controller="actioncontrollerexample" >
    <style type="text/css">
        .pointer
        {
            cursor:pointer;
            border:1px solid #ccc;
            padding:5px;
        }   
    </style>
    <script type="text/javascript">
        function ActionMethod()
        {
                      
             var mar1 = document.getElementById("{!$Component.form.mark1}").value;
             var mar2 = document.getElementById("{!$Component.form.mark2}").value;
             var mar3 = document.getElementById("{!$Component.form.mark3}").value;
             var mar4 = document.getElementById("{!$Component.form.mark4}").value;
             var mar5 = document.getElementById("{!$Component.form.mark5}").value;
            /*Below Method is generated by "apex:actionFunction" which will call Apex Method "echoVal" */
             mark(mar1,mar2,mar3,mar4,mar5);
        }
    </script>   
    <apex:form id="form" >
<apex:outputPanel id="out">
total: <apex:outputLabel value="{!totalmark}"/>
            avg: <apex:outputLabel value="{!avg}"/></apex:outputPanel>
 <apex:actionStatus startText="requesting..." stopText="" id="myStatus" />
             <table>
                <tr> <td>Mark1:</td><td> <apex:inputText id="mark1"/></td></tr><br/>
                <tr><td>Mark2:</td> <td><apex:inputText id="mark2"/></td></tr><br/>
                <tr><td>Mark3:</td> <td><apex:inputText id="mark3"/></td></tr><br/>
                <tr><td>Mark4:</td><td><apex:inputText id="mark4"/></td></tr><br/>
                <tr><td>Mark5:</td><td><apex:inputText id="mark5"/></td></tr><br/>
                <tr><td>
                        <span class="pointer" onclick="ActionMethod()"> Click Me !!!      </span>
                    </td>
                </tr>
             </table>
      <apex:actionFunction name="mark" action="{!total}" reRender="out"  status="myStatus" >
        <apex:param name="mark1" assignTo="{!mark1}" value=""/>
        <apex:param name="mark2" assignTo="{!mark2}" value=""/>
        <apex:param name="mark3" assignTo="{!mark3}" value=""/>
        <apex:param name="mark4" assignTo="{!mark4}" value=""/>
        <apex:param name="mark5" assignTo="{!mark5}" value=""/>
     </apex:actionFunction>
</apex:form>
</apex:page>